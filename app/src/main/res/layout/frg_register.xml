<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_userNameReg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Přezdívka"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/et_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/inputColor"
        android:textColor="@color/inputColor"/>

    <EditText
        android:layout_below="@+id/et_userNameReg"
        android:id="@+id/et_mailReg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textSize="18dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/et_pass"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/inputColor"
        android:textColor="@color/inputColor"/>

    <EditText
        android:layout_below="@+id/et_mailReg"
        android:id="@+id/et_passReg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Heslo"
        android:inputType="textPassword"
        android:textSize="18dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/et_pass"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/inputColor"
        android:textColor="@color/inputColor"/>

    <EditText
        android:layout_below="@+id/et_passReg"
        android:id="@+id/et_passAgainReg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Heslo znovu"
        android:inputType="textPassword"
        android:textSize="18dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/et_pass"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/inputColor"
        android:textColor="@color/inputColor"/>


    <RadioGroup
        android:layout_below="@+id/et_passAgainReg"
        android:id="@+id/rBtnGroup_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <RadioButton
            android:id="@+id/rBtn_trainer"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/inputColor"
            android:text="Trenér"
            android:layout_marginRight="75dp"/>
        <RadioButton
            android:id="@+id/rBtn_player"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/inputColor"
            android:text="Hráč" />
    </RadioGroup>

    <android.support.v7.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/tw_registerLink"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardView_reg"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Registrovat"
            android:id="@+id/btn_register"
            android:layout_marginBottom="31dp"
            android:layout_above="@+id/tw_registerLink"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_login_btn"
            android:textColor="@color/darkOrange"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>